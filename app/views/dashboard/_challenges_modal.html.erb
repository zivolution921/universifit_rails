<div class="modal fade" id="challengeNotificationModal" tabindex="-1" role="dialog" aria-labelledby="challengeNotificationModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="challengeNotificationModalLabel">Challenges</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% current_profile.challenges_received.each do |challenge| %>
          <% if current_user.notifications.challenges.unread.pluck(:object_id).include?(challenge.id) %>
           <%= challenge.challenger.name %>: <%= challenge.text %>   
              <%= link_to("Accept", challenge_actions_path(challenge_id: challenge.id, challenge_action: :accept), method: :post) %>
              <%= link_to("Reject", challenge_actions_path(challenge_id: challenge.id, challenge_action: :reject), method: :post) %>

          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>