<div class='row'>
  <div class='col-md-12'>
    <%= form_tag(profile_exercises_by_date_index_path(current_profile, @exercise), {class: "form-horizontal", role: "form"}) do |f|%>
    <% if @exercise.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@exercise.errors.count, "error") %>
          prohibited this exercise from being saved: 
        </h2>
        <ul>
          <% @exercise.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<div class="form-group">
        <div class="control-label col-md-2">
          <%= label_tag :starts_at, "Starts at" %>
        </div>
        <div class="col-md-10">
          <%= text_field_tag :starts_at, @exercise.starts_at, class: "datetimepicker form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
         <%= label_tag :duration_in_min, "Duration (min)" %>
        </div>
        <div class="col-md-10">
         <%= number_field_tag :duration_in_min, @exercise.duration_in_min, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
         <%= label_tag :location %>
        </div>
        <div class="col-md-10">
         <%= text_field_tag :location, @exercise.location, class: "form-control" %>

        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
         <%= label_tag :dedicated_to %>
        </div>
        <div class="col-md-10">
         <%= text_field_tag :dedicated_to, @exercise.dedicated_to, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= label_tag  :workout, "Workout Details" %><br>
        </div>
        <div class="col-md-10">
          <%= text_field_tag :workout, @exercise.workout, class: "form-control", rows: "10" %>
        </div>
      </div>

      
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= submit_tag 'Save', class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>