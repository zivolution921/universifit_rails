<div class='row'>
  <div class='col-md-12'>
     <%= render '/layouts/form_errors', object: @profile %>
     <%= form_for @profile do |f| %>
     <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label "home gym" %>
        </div>
        <div class="col-md-10">
          <%= f.collection_select :location_id, Location.all, :id, :name, prompt: true, class: "form-control" %> OR<br />
          Custom home gym: <br>
          <%= f.text_field :custom_location, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label "zipcode" %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :zipcode, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>

    <% end %>
  </div>
</div>