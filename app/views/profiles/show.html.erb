<div class="jumbotron">
  <div class="container">

    <div class="row">

      <div class="col-md-4">
        <%= gravatar_tag @user.email, size: 200 %>
      </div>

      <div class="col-md-4">
        <h3><%= @user.username %></h3>
        <p>Age: <%= @user.age %></p>
        <p>Gender: <%= @user.gender %></p>
      </div>

      <div class="col-md-4">
        <h3>Who am I</h3>
        <small><%= @user.bio %></small>
      </div>

    </div>

  </div>
</div>


<div class="container">
  <div class="row">
  <!-- Friend Zone -->
  <div class="col-md-3">
  <div class="panel panel-default">
  <div class="panel-heading">Friends (<%= current_user.profile.size %>)
  </div>
  <div class="panel-body">

  <% @user.active_friends.last(16).each do |user| %>
  <%= link_to user_path(user.username) do %>
    <%= gravatar_tag user.email, size: 40 %>
  <% end %>
  <% end %>

  </div>

  </div>
  </div>
  <!-- Post Zone -->
  <div class="col-md-6">
  </div>
  <!-- Profile Activity -->
  <div class="col-md-3">
    <div class="panel panel-default">
    <div class="panel-heading">Recent Activity</div>
    <div class="panel-body">
      <%= render_activities(@activities) %>
    </div>
    </div>
  </div>

  </div>
</div>



<div class="col-md-10 col-md-offset-1">
  <div class=" row well member">
    <% if following = current_user.following?(params[:id]) %>
      You are following <%= @profile.name %>.<br>
      <%= form_tag "/following/#{following.id}", method: 'delete' do |f| %>
        
        <input type=submit value="Unfollow" class="btn btn-default" />
      <%- end %>
    <% else %>
      <%= form_tag "/following" do |f| %>
        <input type=hidden id="following_user_id" name="following_user_id" value="<%= current_user.id %>" />
        <input type=hidden id="followed_profile_id" name="followed_profile_id" value="<%= params[:id] %>" />
        <input type=submit value="Follow me" class="btn btn-primary" />
      <%- end %>
    <% end %>
  </div>
  <div>
<%= @profile.name %>
</div>

<div>
<%= @profile.location_name_or_custom_location %>
</div>
</div>

